<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Plain text pattern for console (dev) -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr([%X{requestId:-no-request}]){yellow} %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>

    <!-- Console appender - Plain text for local dev -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Console JSON appender - for production -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>requestId</includeMdcKeyName>
            <timeZone>UTC</timeZone>
        </encoder>
    </appender>

    <!-- CloudWatch appender for LocalStack -->
    <appender name="CLOUDWATCH" class="com.seft.learn.example.logging.CloudWatchLogsAppender">
        <endpoint>${CLOUDWATCH_ENDPOINT:-http://localhost:4566}</endpoint>
        <region>${AWS_REGION:-ap-southeast-1}</region>
        <accessKey>${AWS_ACCESS_KEY:-test}</accessKey>
        <secretKey>${AWS_SECRET_KEY:-test}</secretKey>
        <logGroupName>${CLOUDWATCH_LOG_GROUP:-/app/realworld-example/dev}</logGroupName>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- Local/Dev profile: Console plain text only -->
    <springProfile name="local,dev">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- Staging profile: Console JSON + CloudWatch -->
    <springProfile name="staging">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="CLOUDWATCH"/>
        </root>
    </springProfile>

    <!-- Production profile: Console JSON + CloudWatch -->
    <springProfile name="prod,production">
        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="CLOUDWATCH"/>
        </root>
    </springProfile>

    <!-- Default (no profile): Console + CloudWatch -->
    <springProfile name="default">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="CLOUDWATCH"/>
        </root>
    </springProfile>
</configuration>
